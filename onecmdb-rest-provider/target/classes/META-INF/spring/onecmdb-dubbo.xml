<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="onecmdb-rest-provider" owner="programmer" organization="x"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <dubbo:annotation package="org.cmdb.service, org.cmdb.facade"/>

    <!-- use tomcat server -->
    <dubbo:protocol name="rest" port="7890" threads="500" contextpath="onecmdb/api" server="servlet"
                    accepts="500"
                    extension="org.cmdb.extension.SmartExceptionMapper,
                    org.cmdb.extension.TimerFilter,
                    org.cmdb.extension.PermissionFilter"/>

    <dubbo:provider timeout="6000"/>
    <dubbo:consumer timeout="6000" check="false"/>

</beans>
